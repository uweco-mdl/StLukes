<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent">



    <ImageView
        android:id="@+id/triangle_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/spinner_triangle"
        android:rotation="180"
        android:background="@color/sign_in_txt_color"
        android:layout_marginBottom="-16dp"
        android:layout_gravity="center" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_18_dp"
        android:paddingRight="@dimen/dimen_16_dp"
        android:paddingTop="@dimen/dimen_8_dp"
        android:paddingBottom="@dimen/dimen_8_dp"
        android:background="@color/white">

        <com.mdlive.unifiedmiddleware.commonclasses.customUi.CircularNetworkImageView
            android:id="@+id/adapter_dash_borad_spinner_dropdown_circular_image_view"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@null"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/adapter_dash_borad_spinner_dropdown_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_4_dp"
            android:textSize="16sp"
            android:paddingLeft="@dimen/dimen_10_dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/new_login_bg" />
</LinearLayout>