            <Button
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="@dimen/dimen_16_dp"
                android:layout_marginTop="@dimen/sign_up_top_padding"
                android:background="@drawable/orange_button"
                android:gravity="center"
                android:onClick="onCreateFreeAccountClicked"
                android:tag="create_free_account"
                android:text="@string/login_sign_up_txt"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>


    </FrameLayout>

</ScrollView>