<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/lifestyle_header"
        android:paddingLeft="15dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/back_arrow_hdpi"
            android:id="@+id/imageBack"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MY LIFESTYLE"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginLeft="50dp"
            android:textStyle="bold" />

        <ImageView
            android:visibility="gone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_menu_check"

            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F1F5F8">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_marginLeft="15dp"
           android:layout_marginRight="15dp"
           android:layout_marginTop="15dp"
           android:background="#F1F5F8"
           >

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginBottom="10dp"
               >
               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:background="@drawable/lifestyle_text"
                   android:orientation="vertical"
                   android:layout_marginRight="20dp"
                   android:paddingTop="8dp"
                   android:paddingBottom="8dp"
                   android:paddingLeft="8dp"
                   android:paddingRight="5dp">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="HEIGHT"
                       android:textSize="14sp"
                       android:textColor="@color/black"
                       android:layout_marginBottom="6dp"/>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="5 ft"
                           android:textSize="14sp"
                           android:textColor="@color/black"
                           android:layout_marginRight="20dp"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="9 in"
                           android:textSize="14sp"
                           android:textColor="@color/black"/>

                   </LinearLayout>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:background="@drawable/lifestyle_text"
                   android:layout_marginRight="20dp"
                   android:orientation="vertical"
                   android:paddingTop="8dp"
                   android:paddingBottom="8dp"
                   android:paddingLeft="8dp"
                   android:paddingRight="5dp">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="WEIGHT"
                       android:textSize="14sp"
                       android:textColor="@color/black"
                       android:layout_marginBottom="6dp"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="160 lbs"
                       android:textSize="14sp"
                       android:textColor="@color/black" />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:background="@drawable/lifestyle_text"
                   android:orientation="vertical"
                   android:paddingTop="8dp"
                   android:paddingBottom="8dp"
                   android:paddingLeft="8dp"
                   android:paddingRight="5dp">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="BMI"
                       android:textSize="14sp"
                       android:textColor="@color/black"
                       android:layout_marginBottom="6dp"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="45"
                       android:textSize="14sp"
                       android:textColor="@color/black" />
               </LinearLayout>
           </LinearLayout>

           <View style="@style/ProviderSearchViewStyle"
               android:layout_marginTop="5dp"
               />

           <LinearLayout style="@style/MyLifeStyleLinearStyle">
               <TextView
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:text="Do you get at least 7 hours of sleep daily?"
                   android:textColor="@color/black"
                   android:textSize="16sp"
               android:layout_weight="2"/>

                       <RadioGroup
                           android:id="@+id/radioSex"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:orientation="horizontal">

                           <RadioButton
                               android:id="@+id/radioMale"
                               android:text="Yes"
                               style="@style/YesNoRadioButtonStyle"
                               />

                           <RadioButton
                               android:id="@+id/radioFemale"
                               android:text="No"
                               style="@style/YesNoRadioButtonStyle"
                               android:layout_marginLeft="18dp"/>

                       </RadioGroup>


               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="Do you get at least 7 hours of sleep daily?"
                   android:layout_weight="1"
                   android:visibility="gone"/>


           </LinearLayout>

           <View style="@style/ProviderSearchViewStyle"
               android:layout_marginTop="5dp"
               />



           <ListView
               android:id="@+id/lifestyle_listview"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_above="@+id/footer_relativelayout"
               android:layout_below="@+id/secondrootrelativelayout">

           </ListView>



       </LinearLayout>

    </ScrollView>



</LinearLayout>