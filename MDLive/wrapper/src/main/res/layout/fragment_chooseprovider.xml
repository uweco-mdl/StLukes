<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mylocation_background_color"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/mylocation_background_color"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar"
                layout="@layout/mdlive_toolbar" />

            <RelativeLayout
                android:id="@+id/docOnCalLinLay"
                style="@style/Get_Started_Field_Style"
                android:layout_marginLeft="@dimen/dimen_10_dp"
                android:layout_marginRight="@dimen/dimen_10_dp"
                android:layout_marginTop="@dimen/dimen_13_dp"
                >

                <com.mdlive.embedkit.uilayer.sav.CircularNetworkImageView
                    android:id="@+id/ProfileImg"
                    android:layout_width="@dimen/doctorOnCall_imageSize"
                    android:layout_height="@dimen/doctorOnCall_imageSize"
                    android:layout_marginBottom="@dimen/doctorOnCall_imageMarginTop_Bottom"
                    android:layout_marginLeft="@dimen/doctor_on_call_image_margin_left"
                    android:layout_marginTop="@dimen/doctorOnCall_imageMarginTop_Bottom"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dash_board_doctor_icon" />

                <TextView
                    android:id="@+id/PatientName"
                    style="@style/chooseProviderTextStyle"
                    android:layout_marginLeft="@dimen/txtDoctorOnCall_marginLeft"
                    android:layout_marginTop="@dimen/txtDoctorOnCall_marginTop"
                    android:layout_toRightOf="@id/ProfileImg"
                    android:text="@string/doctor_on_call"
                    android:tag="doctor_on_call"
                    android:textSize="@dimen/txtDoctorOnCall_textSize" />

                <TextView
                    android:id="@+id/txtAverageWaitTime"
                    style="@style/chooseProviderTextStyle"
                    android:layout_below="@id/PatientName"
                    android:layout_marginLeft="@dimen/txtAverageWaitTime_marginLeft"
                    android:layout_marginTop="@dimen/txtAverageWaitTime_marginTop"
                    android:layout_toRightOf="@id/ProfileImg"
                    android:text="@string/average_wait"
                    android:tag="average_wait"
                    android:textSize="@dimen/txtAverageWaitTime_textSize" />

                <ImageButton
                    style="@style/common_style_W_Wrap_H_Wrap"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="9dp"
                    android:background="@color/transparent"
                    android:src="@drawable/right_arrow_icon" />

            </RelativeLayout>

            <TextView
                android:id="@+id/loadingTxt"
                style="@style/common_style_W_Wrap_H_Wrap"
                android:layout_below="@id/docOnCalLinLay"
                android:layout_centerHorizontal="true"
                android:text="@string/locating_available_doctors"
                android:tag="locating_available_doctors"
                android:visibility="gone" />

            <FrameLayout
                android:id="@+id/filterMainRl"
                style="@style/common_style_W_Match_M_Wrap"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtFilter"
                    style="@style/chooseProviderTextStyle"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="@string/select_provider"
                    android:tag="select_provider"
                    android:textColor="@color/darkblack"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/filterTxt"
                    style="@style/chooseProviderTextStyle"
                    android:layout_gravity="right"
                    android:layout_marginTop="18dp"
                    android:gravity="center"
                    android:text="@string/filter_txt"
                    android:tag="filter_txt"
                    android:textColor="@color/darkblack"
                    android:textSize="12sp" />
            </FrameLayout>

            <ListView
                android:id="@+id/chooseProviderList"
                style="@style/common_style_W_Match_M_Wrap"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:divider="@android:color/transparent"
                android:dividerHeight="10dp"
                android:layout_marginTop="16dp" />
            <!-- <RelativeLayout
                 android:id="@+id/progressBar"
                 layout="@layout/custom_progress_bar"
                 android:layout_below="@+id/header"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:background="@color/mdliveBottomBlueColor"
                 >
                 <include
                     layout="@layout/custom_progress_bar"
                     />
             </RelativeLayout>-->
        </LinearLayout>

        <FrameLayout
            android:id="@+id/dash_board__left_container"
            android:layout_width="@dimen/drawer_width"
            android:layout_height="match_parent"
            android:layout_gravity="left|start" />


        <FrameLayout
            android:id="@+id/dash_board__right_container"
            android:layout_width="@dimen/drawer_width"
            android:layout_height="match_parent"
            android:layout_gravity="right|end" />

    </android.support.v4.widget.DrawerLayout>

    <RelativeLayout
        android:id="@+id/progressBar"
        layout="@layout/custom_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginTop="?attr/actionBarSize"
        android:background="@color/mdliveBottomBlueColor">

        <include layout="@layout/custom_progress_bar" />
    </RelativeLayout>
</merge>