<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/ContainerStyle"
        android:background="@color/mdliveBottomBlueColor">

        <include
            android:id="@+id/toolbar"
            layout="@layout/mdlive_toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                style="@style/ContainerStyle"
                android:background="@color/choose_pharmacy_background"
                android:padding="@dimen/dimen_10_dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/choose_pharmacy_background"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="30dp"
                        android:gravity="center_horizontal"
                        android:text="@string/thankyou_txt"
                        android:tag="thankyou_txt"
                        android:textColor="@color/darkblack"
                        android:textSize="23sp" />

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="25dp"
                        android:src="@drawable/profilepic" />

                    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                        style="@style/common_style_W_Match_H_Wrap_O_Vertical"
                        android:layout_marginTop="20dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="4dp">

                        <LinearLayout
                            style="@style/common_style_W_Match_H_Match_O_Vertical">

                            <TextView
                                style="@style/myChangeProfileInfoTitleTextStyle"
                                android:text="@string/appointment_details"
                                android:tag="appointment_details"
                                android:background="@color/darkgrey_background" />

                            <TextView
                                android:id="@+id/provider"
                                style="@style/myChangeProfileInfoTextStyle"
                                android:layout_marginTop="14dp"
                                android:text="Provider:" />

                            <TextView
                                android:id="@+id/date"
                                style="@style/myChangeProfileInfoTextStyle"
                                android:layout_marginTop="2dp"
                                android:text="Date:" />

                            <TextView
                                android:id="@+id/time"
                                style="@style/myChangeProfileInfoTextStyle"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="2dp"
                                android:text="Time:" />


                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <LinearLayout
                        style="@style/common_style_W_Match_H_Match_O_Vertical"
                        android:padding="8dp"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/cancellation_information"
                            android:tag="cancellation_information"
                            android:textColor="@color/red"
                            android:textSize="17sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/cancellation_instructions"
                            android:tag="cancellation_instructions"
                            android:textColor="@color/black"
                            android:textSize="17sp"/>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </ScrollView>

    </LinearLayout>
    </android.support.v4.widget.DrawerLayout>
</merge>