<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background_color"
    android:orientation="vertical"
    tools:context="com.mdlive.embedkit.uilayer.lifestyle.MDLiveLifeStyleFragment">

    <LinearLayout
        android:id="@+id/bodymassLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="0.9">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10_dp"
                android:layout_weight="0.3"
                android:background="@drawable/lifestyle_text"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="6dp"
                    android:paddingLeft="6dp"
                    android:tag="@string/mdltag_life_style_height_text"
                    android:text="@string/mdl_life_style_height_text"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/life_style_heighteditTextone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:background="@color/transparent"
                            android:digits="1234567890"
                            android:ems="2"
                            android:inputType="phone"
                            android:maxHeight="2dp"
                            android:maxLength="2"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/black"
                            android:textCursorDrawable="@null"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:background="@color/transparent"
                            android:singleLine="true"
                            android:tag="@string/mdltag_life_style_ft_text"
                            android:text="@string/mdl_life_style_ft_text"
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_weight="0.5"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/life_style_heighteditTexttwo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/transparent"
                            android:digits="1234567890"
                            android:ems="2"
                            android:inputType="phone"
                            android:maxLength="2"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/black"
                            android:textCursorDrawable="@null"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:background="@color/transparent"
                            android:singleLine="true"
                            android:tag="@string/mdltag_life_style_in_text"
                            android:text="@string/mdl_life_style_in_text"
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10_dp"
                android:layout_marginRight="@dimen/dimen_10_dp"
                android:layout_weight="0.3"
                android:background="@drawable/lifestyle_text"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:paddingLeft="6dp"
                    android:tag="@string/mdltag_life_style_weight_text"
                    android:text="@string/mdl_life_style_weight_text"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:paddingTop="10dp">

                    <EditText
                        android:id="@+id/life_style_weight_editTextone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:background="@color/transparent"
                        android:digits="1234567890"
                        android:ems="2"
                        android:inputType="phone"
                        android:maxLength="3"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/black"
                        android:textCursorDrawable="@null"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:background="@color/transparent"
                        android:singleLine="true"
                        android:tag="@string/mdltag_life_style_lbs_text"
                        android:text="@string/mdl_life_style_lbs_text"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_10_dp"
                android:layout_weight="0.3"
                android:background="@drawable/lifestyle_text"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:paddingLeft="6dp"
                    android:tag="@string/mdltag_life_style_bmi_text"
                    android:text="@string/mdl_life_style_bmi_text"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/life_style_bmi_value_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:paddingTop="10dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/dimen_8_dp"
            android:background="@color/divider" />

