<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_48_dp"
        android:background="@drawable/blue_rounded_corner"
        android:onClick="callAction"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_64_dp"
        android:paddingRight="@dimen/dimen_64_dp"
        android:layout_marginTop="@dimen/dimen_16_dp">

        <ImageView
            android:layout_width="@dimen/dimen_16_dp"
            android:layout_height="@dimen/dimen_16_dp"
            android:src="@drawable/icon_phone_white"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_16_dp"
            android:text="@string/call_customer_service"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_48_dp"
        android:background="@drawable/blue_rounded_corner"
        android:onClick="askQuestion"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_64_dp"
        android:paddingRight="@dimen/dimen_64_dp"
        android:layout_marginTop="@dimen/dimen_16_dp"
        android:layout_marginBottom="@dimen/dimen_16_dp">

        <ImageView
            android:layout_width="@dimen/dimen_16_dp"
            android:layout_height="@dimen/dimen_32_dp"
            android:src="@drawable/icon_email_white"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_16_dp"
            android:text="@string/ask_a_question"/>
    </LinearLayout>
</LinearLayout>