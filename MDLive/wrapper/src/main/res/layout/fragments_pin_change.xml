<?xml version="1.0" encoding="UTF-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center_horizontal">


    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">


        <FrameLayout
            android:id="@+id/cover_passcode_field_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null">

            <EditText
                android:id="@+id/passCode1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:background="@null"
                android:enabled="false"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:singleLine="true"
                android:textColor="@android:color/transparent" />

            <View
                android:id="@+id/dumy_passcode_field_1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:background="@null"
                android:onClick="onClickPinBox1" />

        </FrameLayout>


        <FrameLayout
            android:id="@+id/cover_passcode_field_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/passCode2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:enabled="false"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:singleLine="true"
                android:textColor="@android:color/transparent" />

            <View
                android:id="@+id/dumy_passcode_field_2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="2dp" />

        </FrameLayout>


        <FrameLayout
            android:id="@+id/cover_passcode_field_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/passCode3"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:enabled="false"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:singleLine="true"
                android:textColor="@android:color/transparent" />

            <View
                android:id="@+id/dumy_passcode_field_3"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="2dp" />

        </FrameLayout>


        <FrameLayout
            android:id="@+id/cover_passcode_field_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/passCode4"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:enabled="false"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:singleLine="true"
                android:textColor="@android:color/transparent" />

            <View
                android:id="@+id/dumy_passcode_field_4"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="2dp" />

        </FrameLayout>


        <FrameLayout
            android:id="@+id/cover_passcode_field_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/passCode5"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:enabled="false"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:singleLine="true"
                android:textColor="@android:color/transparent" />

            <View
                android:id="@+id/dumy_passcode_field_5"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="2dp" />

        </FrameLayout>


        <FrameLayout
            android:id="@+id/cover_passcode_field_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/passCode6"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:enabled="false"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:singleLine="true"
                android:textColor="@android:color/transparent" />

            <View
                android:id="@+id/dumy_passcode_field_6"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="2dp" />

        </FrameLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="50dp"
        android:text="Please create a 6 digit pin."
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/dumy_field_passcode"
        android:layout_width="0.1dp"
        android:layout_height="0dp"
        android:inputType="numberPassword"
        android:maxLength="6" />

</LinearLayout>