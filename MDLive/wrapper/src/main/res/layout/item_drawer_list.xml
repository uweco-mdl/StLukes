<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingLeft="@dimen/dimen_8_dp"
        android:paddingBottom="@dimen/dimen_8_dp"
        android:paddingTop="@dimen/dimen_8_dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/dimen_32_dp"
            android:layout_height="@dimen/dimen_32_dp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_16_dp"
            android:layout_toRightOf="@id/image"
            android:textColor="@android:color/black"
            android:textStyle="normal"
            android:textSize="17sp"
            android:fontFamily="sans-serif-light" />


        <TextView
            android:id="@+id/message_count"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:textColor="@color/white"
            android:background="@drawable/orange_message_count"
            android:padding="@dimen/dimen_2_dp"
            android:textSize="11sp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:layout_gravity="right|top"/>


    </RelativeLayout>

    <View
        android:layout_below="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/new_login_bg"
        android:layout_marginLeft="48dp" />

</RelativeLayout>