<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/window_background_color"
        android:orientation="vertical"
        android:padding="@dimen/mdlive_logo_image_padding_top">

        <ImageView
            android:id="@+id/headerLogoIv"
            android:layout_width="@dimen/logo_width_pin"
            android:layout_height="@dimen/logo_height_pin"
            android:layout_gravity="center"
            android:layout_marginBottom="43dp"
            android:src="@drawable/mdlive_logo" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/passCode1"
                    android:layout_width="@dimen/dimen_20_dp"
                    android:layout_height="@dimen/dimen_20_dp"
                    android:layout_marginLeft="@dimen/dimen_10_dp"
                    android:layout_marginRight="@dimen/dimen_10_dp"
                    android:layout_marginTop="@dimen/dimen_8_dp"
                    android:layout_marginBottom="@dimen/dimen_8_dp"
                    android:background="@drawable/edit_text_selector"
                    android:enabled="false"
                    android:gravity="center"
                    android:textOff="@null"
                    android:textOn="@null" />

                <ToggleButton
                    android:id="@+id/passCode2"
                    android:layout_width="@dimen/dimen_20_dp"
                    android:layout_height="@dimen/dimen_20_dp"
                    android:layout_marginLeft="@dimen/dimen_10_dp"
                    android:layout_marginRight="@dimen/dimen_10_dp"
                    android:layout_marginTop="@dimen/dimen_8_dp"
                    android:layout_marginBottom="@dimen/dimen_8_dp"
                    android:background="@drawable/edit_text_selector"
                    android:enabled="false"
                    android:gravity="center"
                    android:textOff="@null"
                    android:textOn="@null" />

                <ToggleButton
                    android:id="@+id/passCode3"
                    android:layout_width="@dimen/dimen_20_dp"
                    android:layout_height="@dimen/dimen_20_dp"
                    android:layout_marginLeft="@dimen/dimen_10_dp"
                    android:layout_marginRight="@dimen/dimen_10_dp"
                    android:layout_marginTop="@dimen/dimen_8_dp"
                    android:layout_marginBottom="@dimen/dimen_8_dp"
                    android:background="@drawable/edit_text_selector"
                    android:enabled="false"
                    android:gravity="center"
                    android:textOff="@null"
                    android:textOn="@null" />

                <ToggleButton
                    android:id="@+id/passCode4"
                    android:layout_width="@dimen/dimen_20_dp"
                    android:layout_height="@dimen/dimen_20_dp"
                    android:layout_marginLeft="@dimen/dimen_10_dp"
                    android:layout_marginRight="@dimen/dimen_10_dp"
                    android:layout_marginTop="@dimen/dimen_8_dp"
                    android:layout_marginBottom="@dimen/dimen_8_dp"
                    android:background="@drawable/edit_text_selector"
                    android:enabled="false"
                    android:gravity="center"
                    android:textOff="@null"
                    android:textOn="@null" />

                <ToggleButton
                    android:id="@+id/passCode5"
                    android:layout_width="@dimen/dimen_20_dp"
                    android:layout_height="@dimen/dimen_20_dp"
                    android:layout_marginLeft="@dimen/dimen_10_dp"
                    android:layout_marginRight="@dimen/dimen_10_dp"
                    android:layout_marginTop="@dimen/dimen_8_dp"
                    android:layout_marginBottom="@dimen/dimen_8_dp"
                    android:background="@drawable/edit_text_selector"
                    android:enabled="false"
                    android:gravity="center"
                    android:textOff="@null"
                    android:textOn="@null" />

                <ToggleButton
                    android:id="@+id/passCode6"
                    android:layout_width="@dimen/dimen_20_dp"
                    android:layout_height="@dimen/dimen_20_dp"
                    android:layout_marginLeft="@dimen/dimen_10_dp"
                    android:layout_marginRight="@dimen/dimen_10_dp"
                    android:layout_marginTop="@dimen/dimen_8_dp"
                    android:layout_marginBottom="@dimen/dimen_8_dp"
                    android:background="@drawable/edit_text_selector"
                    android:enabled="false"
                    android:gravity="center"
                    android:textOff="@null"
                    android:textOn="@null" />
            </LinearLayout>

            <EditText
                android:id="@+id/etPasscode"
                android:layout_width="230dp"
                android:layout_height="@dimen/dimen_24_dp"
                android:background="@null"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="none"
                android:maxLength="6"
                android:visibility="gone"
                android:singleLine="true"
                android:text=""
                android:textColor="@android:color/transparent"
                android:textColorHighlight="@android:color/transparent"
                android:windowSoftInputMode="adjustPan">
            </EditText>
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_32_dp"
            android:text="@string/mdl_enter_your_pin_to_unlock"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-light"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_32_dp"
            android:clickable="true"
            android:onClick="onSignInClicked"
            android:text="@string/mdl_sign_in_with_user_name_and_password"
            android:textColor="@color/card_details_text_color"
            android:textSize="12sp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:paddingLeft="@dimen/dimen_32_dp"
        android:paddingRight="@dimen/dimen_32_dp">

        <include layout="@layout/mdlive_layout_keypad" />
    </FrameLayout>
</LinearLayout>
