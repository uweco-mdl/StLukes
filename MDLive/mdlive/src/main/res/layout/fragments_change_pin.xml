<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background_color"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/topTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10_dp"
        android:paddingLeft="@dimen/dimen_16_dp"
        android:paddingRight="@dimen/dimen_16_dp"
        android:text="@string/mdl_create_pin"
        android:textColor="@color/toolbar_bottom"
        android:textSize="@dimen/dimen_24_dp" />

    <TextView
        android:id="@+id/fragment_change_pin_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="@dimen/dimen_14_dp"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="@dimen/dimen_16_dp"
        android:paddingRight="@dimen/dimen_16_dp"
        android:text="@string/mdl_please_create_a_6_digit_pin"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <FrameLayout
        android:paddingLeft="@dimen/dimen_16_dp"
        android:paddingRight="@dimen/dimen_16_dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="@dimen/dimen_16_dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/passCode1"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="@dimen/dimen_50_dp"
                android:background="@drawable/edit_text_selector"
                android:enabled="false"
                android:gravity="center"
                android:textOff="@null"
                android:textOn="@null" />

            <ToggleButton
                android:id="@+id/passCode2"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_50_dp"
                android:background="@drawable/edit_text_selector"
                android:enabled="false"
                android:gravity="center"
                android:textOff="@null"
                android:textOn="@null" />

            <ToggleButton
                android:id="@+id/passCode3"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_50_dp"
                android:background="@drawable/edit_text_selector"
                android:enabled="false"
                android:gravity="center"
                android:textOff="@null"
                android:textOn="@null" />

            <ToggleButton
                android:id="@+id/passCode4"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_50_dp"
                android:background="@drawable/edit_text_selector"
                android:enabled="false"
                android:gravity="center"
                android:textOff="@null"
                android:textOn="@null" />

            <ToggleButton
                android:id="@+id/passCode5"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_50_dp"
                android:background="@drawable/edit_text_selector"
                android:enabled="false"
                android:gravity="center"
                android:textOff="@null"
                android:textOn="@null" />

            <ToggleButton
                android:id="@+id/passCode6"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_50_dp"
                android:background="@drawable/edit_text_selector"
                android:enabled="false"
                android:gravity="center"
                android:textOff="@null"
                android:textOn="@null" />
        </LinearLayout>

        <EditText
            android:id="@+id/etPasscode"
            android:layout_width="230dp"
            android:layout_height="@dimen/dimen_32_dp"
            android:background="@null"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:singleLine="true"
            android:text=""
            android:textColor="@android:color/transparent"
            android:windowSoftInputMode="adjustPan">

            <requestFocus />
        </EditText>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_16_dp"
            android:fontFamily="sans-serif-light"
            android:gravity="left"
            android:paddingLeft="@dimen/dimen_16_dp"
            android:paddingRight="@dimen/dimen_16_dp"
            android:text="@string/mdl_access_your_phone_using_pin"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dimen_16_dp" />

        <TextView
            android:id="@+id/dont_use_pin_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/dimen_10_dp"
            android:paddingLeft="@dimen/dimen_16_dp"
            android:paddingRight="@dimen/dimen_16_dp"
            android:text="@string/mdl_i_dont_want_to_use_pin"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_4_dp"
            android:gravity="left"
            android:paddingLeft="@dimen/dimen_16_dp"
            android:paddingRight="@dimen/dimen_16_dp"
            android:text="@string/mdl_you_can_enable_your_screen"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_weight="1">

        <RelativeLayout
            android:id="@+id/previousNextLayout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@android:color/darker_gray">

            <ImageView
                android:id="@+id/previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_previous_item"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_next_item"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/previous"
                android:layout_marginLeft="@dimen/dimen_16_dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mdl_done"
                android:layout_alignParentRight="true"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:textColor="@color/toolbar_bottom"
                android:layout_marginRight="@dimen/dimen_16_dp"/>

        </RelativeLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">
            <include layout="@layout/mdlive_layout_keypad" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
