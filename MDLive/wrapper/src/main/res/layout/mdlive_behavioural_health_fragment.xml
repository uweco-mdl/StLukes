<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ContainerStyle"
    android:background="#EEF2F7"
    android:orientation="vertical">

    <Button
        android:id="@+id/save_btn"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/orange_btn_gradient"
        android:text="SAVE"
        android:layout_alignParentBottom="true"
        android:onClick="onTickClicked"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:gravity="center" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/save_btn"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_darker_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="15dp"
                    android:textSize="17sp"
                    android:text="@string/mdl_behaviouralhealth_question_one"
                    android:tag="@string/mdltag_behaviouralhealth_question_one"
                    android:textColor="@color/ReasonForVisit_TextColor_black" />

                <View
                    android:id="@+id/divider1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/behaviouralhealth_question_one_textView"
                    android:background="@color/behaviour_divider" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mdlive_behavioural_histroy_conditions"
                android:orientation="vertical"></LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/behaviour_divider" />

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@color/white_darker_bg">

                <TextView
                    style="@style/BaseTextViewStyle.MyhealthBehavoiralContentStyle"
                    android:text="@string/mdl_behaviouralhealth_question_two"
                    android:tag="@string/mdltag_behaviouralhealth_question_two"
                    android:textSize="14sp"
                    android:padding="15dp"
                    android:textColor="@color/ReasonForVisit_TextColor_black" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:id="@+id/behavioural_health_hospitalized_radio_group"
                        style="@style/BaseTextViewStyle.MyhealthBehaviourChoiceBtnStyle"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/behavioural_health_hospitalized_yes_radio_button"
                            style="@style/YesNoRadioButtonStyle"
                            android:button="@drawable/behaviour_checked_selector" />

                        <RadioButton
                            android:id="@+id/behavioural_health_hospitalized_no_radio_button"
                            style="@style/YesNoRadioButtonStyle"
                            android:layout_marginLeft="@dimen/medical_history_margin_ten"

                            android:button="@drawable/behaviour_uncheked_selector" />

                    </RadioGroup>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/behaviouralhealth_question_one_textView"
                    android:background="@color/behaviour_divider" />

            </LinearLayout>

            <RelativeLayout
                style="@style/Choose_Pharmacy_Search_Field"
                android:layout_width="match_parent"
                android:id="@+id/behavoural_when_ll"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    style="@style/searchPharmacyLabelStyle"
                    android:text="@string/mdl_behaviouralhealth_question_three"
                    android:tag="@string/mdltag_behaviouralhealth_question_three"
                    android:textColor="@color/darkgreyTextColor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/mdlive_behavioural_histroy_when_text_view"
                    style="@style/SelectStateCommonStyle"
                    android:layout_gravity="end"
                    android:drawableRight="@drawable/icon_arrow_right"
                    android:onClick="chooseStateOnClick" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dimen_10_dp"
                android:layout_marginRight="@dimen/dimen_10_dp"
                android:layout_below="@+id/behaviouralhealth_question_one_textView"
                android:background="@color/behaviour_divider" />

            <RelativeLayout
                style="@style/Choose_Pharmacy_Search_Field"
                android:layout_width="match_parent"
                android:id="@+id/behavoural_how_long_ll"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/how_long_txt"
                    style="@style/searchPharmacyLabelStyle"
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/mdl_behaviouralhealth_question_four"
                    android:tag="@string/mdltag_behaviouralhealth_question_four"
                    android:textColor="@color/darkgreyTextColor" />


                <ImageView
                    android:id="@+id/more_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_arrow_right" />

                <EditText
                    android:id="@+id/mdlive_behavioural_histroy_how_long_text_view"
                    style="@style/SelectStateCommonStyle"
                    android:layout_toRightOf="@+id/how_long_txt"
                    android:layout_toLeftOf="@+id/more_icon"
                    android:layout_width="wrap_content"
                    android:hint="@string/mdl_behaviouralhealthhistory_dummy_duration"
                    android:gravity="end|center_vertical"
                    android:tag="@string/mdltag_behaviouralhealthhistory_dummy_duration"
                    android:textColor="@color/darkgreyTextColor" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_darker_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="15dp"
                    android:textSize="17sp"
                    android:text="@string/mdl_behaviouralhealth_question_five"
                    android:tag="@string/mdltag_behaviouralhealth_question_five"
                    android:textColor="@color/ReasonForVisit_TextColor_black" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/behaviouralhealth_question_one_textView"
                    android:background="@color/behaviour_divider" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mdlive_behavioural_family_histroy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />


            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@color/white_darker_bg">

                <TextView
                    android:id="@+id/PediatricChecks"
                    android:textSize="14sp"
                    android:padding="15dp"
                    style="@style/BaseTextViewStyle.MyhealthBehavoiralContentStyle"
                    android:text="@string/mdl_behaviouralhealth_question_six"
                    android:tag="@string/mdltag_behaviouralhealth_question_six"
                    android:textColor="@color/ReasonForVisit_TextColor_black" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:id="@+id/behavioural_health_question_family_radio_group"
                        style="@style/BaseTextViewStyle.MyhealthBehaviourChoiceBtnStyle"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/behavioural_health_question_family_yes_radio_button"
                            style="@style/YesNoRadioButtonStyle"
                            android:text="@string/mdl_yes"
                            android:tag="@string/mdltag_yes" />

                        <RadioButton
                            android:id="@+id/behavioural_health_question_family_no_radio_button"
                            style="@style/YesNoRadioButtonStyle"
                            android:layout_marginLeft="@dimen/medical_history_margin_ten"
                            android:text="@string/mdl_no"
                            android:tag="@string/mdltag_no" />

                    </RadioGroup>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/behaviouralhealth_question_one_textView"
                    android:background="@color/behaviour_divider" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/mdl_behaviouralhealth_question_seven"
                android:tag="@string/mdltag_behaviouralhealth_question_seven"
                android:textColor="@color/ReasonForVisit_TextColor_black" />

            <LinearLayout
                style="@style/Choose_Pharmacy_Search_Field"
                android:layout_width="wrap_content">

                <Spinner
                    android:id="@+id/behavioural_health_counselling_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dialog"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>