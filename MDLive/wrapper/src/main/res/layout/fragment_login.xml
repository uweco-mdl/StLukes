<?xml version="1.0" encoding="utf-8"?>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:background="@color/white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/login_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/login_container_top_margin"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_gravity="top">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_8_dp"
                android:layout_marginTop="@dimen/dimen_8_dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/userName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_4_dp"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:tag = "username_or_email"
                    android:textColor="@color/gray_6"
                    android:background="@color/transparent"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:hint="@string/username_or_email" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".5"
                    android:textColor="@color/card_details_text_color"
                    android:textSize="12sp"
                    android:tag = "forgot_username"
                    android:gravity="right"
                    android:text="@string/forgot_username"
                    android:clickable="true"
                    android:onClick="onForgotUserNameClicked"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_8_dp"
                android:layout_marginTop="@dimen/dimen_8_dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_4_dp"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:textColor="@color/gray_6"
                    android:background="@color/transparent"
                    android:hint="@string/password"
                    android:tag = "password"
                    android:password="true"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".5"
                    android:textSize="12sp"
                    android:gravity="right"
                    android:textColor="@color/card_details_text_color"
                    android:text="@string/forgot_password"
                    android:tag = "forgot_password"
                    android:clickable="true"
                    android:onClick="onForgotPasswordClicked"/>
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="@dimen/dimen_16_dp"
                android:layout_marginTop="@dimen/dimen_16_dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="18sp"
                android:background="@drawable/white_button_with_black_border"
                android:text="@string/sign_in"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:tag = "sign_in"
                android:onClick="onSignInClicked"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_4_dp"
                android:layout_marginTop="@dimen/dimen_8_dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="#ff555555" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_4_dp"
                    android:layout_marginRight="@dimen/dimen_4_dp"
                    android:textColor="@color/gray_6"
                    android:tag = "or"
                    android:text="@string/or" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="#ff555555" />
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="@dimen/dimen_16_dp"
                android:layout_marginTop="@dimen/dimen_16_dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:background="@drawable/blue_button"
                android:text="@string/create_free_account"
                android:tag = "create_free_account"
                android:onClick="onCreateFreeAccountClicked"/>
        </LinearLayout>
    </FrameLayout>

    </ScrollView>