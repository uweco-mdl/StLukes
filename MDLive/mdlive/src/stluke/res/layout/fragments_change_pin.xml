<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/health_system_container_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:visibility="visible"></ImageView>

        <ImageView
            android:id="@+id/health_system_niv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="71dp"
            android:src="@drawable/sentara"
            android:visibility="gone" />

        <TextView
            android:id="@+id/health_system_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/health_system_niv"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="56dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:textColor="@color/myTextPrimaryColor"
            android:textSize="17sp"
            android:visibility="gone" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen_10_dp"
        android:paddingLeft="@dimen/dimen_16_dp"
        android:paddingRight="@dimen/dimen_16_dp"
        android:weightSum="1">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_10_dp"
            android:layout_weight="0.05">

            <EditText
                android:id="@+id/etPasscode"
                android:layout_width="230dp"
                android:layout_height="@dimen/dimen_32_dp"
                android:background="@null"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="numberPassword"
                android:maxLength="6"
                android:singleLine="true"
                android:text=""
                android:textColor="@android:color/transparent"
                android:visibility="gone"
                android:windowSoftInputMode="adjustPan"></EditText>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/passCode1"
                    android:layout_width="@dimen/dimen_20_dp"
                    android:layout_height="@dimen/dimen_20_dp"
                    android:layout_marginBottom="@dimen/dimen_8_dp"
                    android:layout_marginLeft="@dimen/dimen_10_dp"
                    android:layout_marginRight="@dimen/dimen_10_dp"
                    android:layout_marginTop="@dimen/dimen_8_dp"
                    android:background="@drawable/edit_text_selector"
                    android:contentDescription="@string/mdl_ada_pin_one"
                    android:enabled="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:textOff="@null"
                    android:textOn="@null" />

                <ToggleButton
                    android:id="@+id/passCode2"
                    android:layout_width="@dimen/dimen_20_dp"
                    android:layout_height="@dimen/dimen_20_dp"
                    android:layout_marginBottom="@dimen/dimen_8_dp"
                    android:layout_marginLeft="@dimen/dimen_10_dp"
                    android:layout_marginRight="@dimen/dimen_10_dp"
                    android:layout_marginTop="@dimen/dimen_8_dp"
                    android:background="@drawable/edit_text_selector"
                    android:contentDescription="@string/mdl_ada_pin_two"
                    android:enabled="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:textOff="@null"
                    android:textOn="@null" />

                <ToggleButton
                    android:id="@+id/passCode3"
                    android:layout_width="@dimen/dimen_20_dp"
                    android:layout_height="@dimen/dimen_20_dp"
                    android:layout_marginBottom="@dimen/dimen_8_dp"
                    android:layout_marginLeft="@dimen/dimen_10_dp"
                    android:layout_marginRight="@dimen/dimen_10_dp"
                    android:layout_marginTop="@dimen/dimen_8_dp"
                    android:background="@drawable/edit_text_selector"
                    android:contentDescription="@string/mdl_ada_pin_three"
                    android:enabled="false"
                    android:gravity="center"
                    android:textOff="@null"
                    android:textOn="@null" />

                <ToggleButton
                    android:id="@+id/passCode4"
                    android:layout_width="@dimen/dimen_20_dp"
                    android:layout_height="@dimen/dimen_20_dp"
                    android:layout_marginBottom="@dimen/dimen_8_dp"
                    android:layout_marginLeft="@dimen/dimen_10_dp"
                    android:layout_marginRight="@dimen/dimen_10_dp"
                    android:layout_marginTop="@dimen/dimen_8_dp"
                    android:background="@drawable/edit_text_selector"
                    android:contentDescription="@string/mdl_ada_pin_four"
                    android:enabled="false"
                    android:gravity="center"
                    android:textOff="@null"
                    android:textOn="@null" />

                <ToggleButton
                    android:id="@+id/passCode5"
                    android:layout_width="@dimen/dimen_20_dp"
                    android:layout_height="@dimen/dimen_20_dp"
                    android:layout_marginBottom="@dimen/dimen_8_dp"
                    android:layout_marginLeft="@dimen/dimen_10_dp"
                    android:layout_marginRight="@dimen/dimen_10_dp"
                    android:layout_marginTop="@dimen/dimen_8_dp"
                    android:background="@drawable/edit_text_selector"
                    android:contentDescription="@string/mdl_ada_pin_five"
                    android:enabled="false"
                    android:gravity="center"
                    android:textOff="@null"
                    android:textOn="@null" />

                <ToggleButton
                    android:id="@+id/passCode6"
                    android:layout_width="@dimen/dimen_20_dp"
                    android:layout_height="@dimen/dimen_20_dp"
                    android:layout_marginBottom="@dimen/dimen_8_dp"
                    android:layout_marginLeft="@dimen/dimen_10_dp"
                    android:layout_marginRight="@dimen/dimen_10_dp"
                    android:layout_marginTop="@dimen/dimen_8_dp"
                    android:background="@drawable/edit_text_selector"
                    android:contentDescription="@string/mdl_ada_pin_six"
                    android:enabled="false"
                    android:gravity="center"
                    android:textOff="@null"
                    android:textOn="@null" />
            </LinearLayout>


        </FrameLayout>

        <LinearLayout
            style="@style/common_style_W_Match_H_Wrap_O_Vertical"
            android:layout_height="0dp"
            android:layout_weight="0.40"
            android:layout_marginTop="@dimen/dimen_10_dp"
            android:gravity="start"
            android:visibility="visible">


            <TextView
                android:id="@+id/fragment_change_pin_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-light"
                android:text="@string/mdl_please_create_a_6_digit_pin"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dimen_16_dp"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:text="@string/mdl_access_your_phone_using_pin"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/dont_use_pin_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dimen_14_dp"
                    android:text="@string/mdl_i_dont_want_to_use_pin"
                    android:textColor="@color/card_details_text_color"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dimen_4_dp"
                    android:gravity="center"
                    android:text="@string/mdl_you_can_enable_your_screen"
                    android:textColor="@color/grey_txt"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".55">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/dimen_32_dp"
                android:paddingRight="@dimen/dimen_32_dp">

                <include layout="@layout/mdlive_layout_keypad" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>