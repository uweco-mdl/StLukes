<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mdlive.embedkit.global.GCMNotificationDialog">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Medium Text"
        android:id="@+id/MessageTv"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/CancelBtn"
        android:layout_toStartOf="@+id/CancelBtn"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mdl_Ok"
        android:id="@+id/OkBtn"
        android:layout_below="@+id/MessageTv"
        android:textColor="@color/blue_text"
        android:layout_alignParentRight="true"
        style="?android:attr/borderlessButtonStyle"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="48dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mdl_cancel"
        android:id="@+id/CancelBtn"
        android:textColor="@color/blue_text"
        style="?android:attr/borderlessButtonStyle"
        android:layout_alignTop="@+id/OkBtn"
        android:layout_toLeftOf="@+id/OkBtn"
        android:layout_toStartOf="@+id/OkBtn"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp" />
</RelativeLayout>
