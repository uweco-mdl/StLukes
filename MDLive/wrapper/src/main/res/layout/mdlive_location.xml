<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mylocation_background_color"
        >

        <LinearLayout
            style="@style/common_style_W_Match_H_Match_O_Vertical">

           <include
                android:id="@+id/toolbar"
                layout="@layout/mdlive_toolbar" />


            <LinearLayout
                style="@style/ContainerStyle"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dimen_24_dp"
                >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_c" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text= "@string/mdl_locationSubHeader_txt"
                    android:textSize= "20sp"
                    android:padding="9dp"
                    android:textColor = "@color/black">

                </TextView>

                <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:cardCornerRadius="@dimen/dimen_4_dp"
                    android:background="@color/white"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="11dp"
                    android:paddingBottom ="5dp"
                    style="@style/Choose_Pharmacy_Search_Field_Card_View">

                    <Button
                        android:id="@+id/currentLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center"
                        android:tag="@string/mdltag_current_loc_txt"
                        android:textAllCaps="true"
                        android:text="@string/mdl_current_loc_txt"
                        android:textColor="@color/button_top"
                        android:fontFamily="sans-serif"
                        android:paddingLeft="9dp"
                        android:paddingRight="11dp"
                        android:textSize="17sp"/>

                </android.support.v7.widget.CardView>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/scrollview_height"
                    android:layout_weight="1"
                    android:background="@color/choose_pharmacy_background">

                    <LinearLayout
                        android:background="@color/white"
                        style="@style/WagParentLinearLayoutStyle"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/dimen_10_dp"
                            android:layout_marginLeft="@dimen/dimen_10_dp"
                            android:layout_marginRight="@dimen/dimen_10_dp"
                            android:background="@color/gray_c" />

                        <RelativeLayout
                            android:layout_marginTop="@dimen/dimen_10_dp"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            >

                            <TextView
                                android:id ="@+id/zipLabel"
                                android:text="@string/mdl_or_enter"
                                android:textColor ="@color/black"
                                android:textSize = "20sp"
                                android:tag="@string/mdltag_zip_code"
                                android:layout_width="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:paddingLeft="9dp"
                                android:layout_height="wrap_content" />

                            <EditText
                                android:layout_marginLeft="@dimen/dimen_10_dp"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/zipLabel"
                                android:layout_toLeftOf="@+id/zipArrow"
                                android:id="@+id/ZipEditTxt"
                                android:background="@color/white"
                                android:inputType="number"
                                android:maxLength="10"
                                android:tag="enter_zip"
                                android:hint = "@string/mdl_zip_code"
                                android:gravity="right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:id ="@+id/zipArrow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src = "@drawable/ic_action_next_item">

                            </ImageView>

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/dimen_10_dp"
                            android:layout_marginLeft="@dimen/dimen_10_dp"
                            android:background="@color/gray_c" />

                        <RelativeLayout
                            android:layout_marginTop="@dimen/dimen_10_dp"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">

                            <TextView
                                android:paddingLeft="9dp"
                                style="@style/searchPharmacyLabelStyle"
                                android:tag="@string/mdltag_state"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:textSize = "20sp"
                                android:text="or" />

                            <TextView
                                android:layout_centerVertical="true"
                                android:gravity="center"
                                android:id="@+id/StateTxt"
                                android:layout_alignParentRight="true"
                                android:drawableRight="@drawable/ic_action_next_item"
                                android:hint="@string/mdl_state"
                                android:tag="@string/mdltag_select_stg"
                                android:textSize = "20sp"
                                android:textColor ="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </RelativeLayout>

                    </LinearLayout>
                </ScrollView>

                <Button android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background = "@drawable/btn_color_gradient"
                    android:text = "@string/mdl_save"
                    android:textAllCaps = "true"
                    android:textColor ="@color/white"
                    android:textSize = "20sp"
                    />
            </LinearLayout>


        </LinearLayout>

        <FrameLayout
            android:id="@+id/dash_board__left_container"
            android:layout_width="@dimen/drawer_width"
            android:layout_height="match_parent"
            android:layout_gravity="left|start" />


        <FrameLayout
            android:id="@+id/dash_board__right_container"
            android:layout_width="@dimen/drawer_width"
            android:layout_height="match_parent"
            android:layout_gravity="right|end" />
    </android.support.v4.widget.DrawerLayout>

    <include layout="@layout/custom_progress_dialog" />
</merge>
