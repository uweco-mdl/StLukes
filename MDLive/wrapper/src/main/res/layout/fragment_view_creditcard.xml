<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/common_style_W_Match_H_Match_O_Vertical"
    android:background="@color/app_background">

    <TextView
        style="@style/common_style_W_Wrap_H_Wrap"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:text="@string/credit_card_info"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/common_style_W_Match_H_Wrap"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="4dp">

        <RelativeLayout style="@style/common_style_W_Wrap_H_Wrap"
            android:visibility="gone"
            android:id="@+id/viewCreditCard">

            <TextView
                android:id="@+id/cardEndDate"
                style="@style/common_style_W_Wrap_H_Wrap"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="14dp"
                android:textColor="@color/darkgreyTextColor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/cardAddress"
                style="@style/common_style_W_Wrap_H_Wrap"
                android:layout_below="@id/cardEndDate"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:textColor="@color/EditText_HintColor"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/imgCard"
                android:layout_width="111dp"
                android:layout_height="69dp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="19dp"
                android:layout_marginTop="55dp"
                android:src="@drawable/master_card" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/myProfileButtonStyle"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="4dp">

        <TextView
            android:id="@+id/addCreditCard"
            style="@style/myProfileButtonStyle"
            android:text="@string/replace_card"
            />
    </android.support.v7.widget.CardView>
</LinearLayout>