<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_c"
        android:layout_marginLeft="@dimen/dimen_10_dp"
        android:layout_marginRight="@dimen/dimen_10_dp" />

    <RelativeLayout
        style="@style/MyLifeStyleLinearStyle"
        android:layout_height="?actionBarSize"
        android:id="@+id/lifestyle_question_linearlayout"
        android:layout_marginRight="@dimen/dimen_10_dp">

        <RadioGroup
            android:id="@+id/rootradiogroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true">

            <RadioButton
                android:id="@+id/yesradioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:button="@drawable/behaviour_checked_selector" />

            <RadioButton
                android:id="@+id/noradioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:button="@drawable/behaviour_uncheked_selector" />

        </RadioGroup>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/life_style_question_text"
            android:text="@string/mdl_life_style_question_text"
            android:tag="@string/mdltag_life_style_question_text"
            android:layout_toLeftOf="@+id/rootradiogroup"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_10_dp"
            android:layout_gravity="center_vertical|start"
             />


    </RelativeLayout>

</LinearLayout>
